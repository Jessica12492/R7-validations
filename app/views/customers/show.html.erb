<p style="color: green"><%= notice %></p>
<!--card class-->
<div class="card">
<div class="card shadow p-3 mb-5 bg-white rounded">
<div class="card-body">
<div class="p-3 mb-2 bg-info text-white">Customer Information
</div>   
</div>
</div>
</div>

<%= render @customer %>

<table class="table">
  <thead>
  <tr>
  
    <th>Product Name:</th>
    <th>Product Count:</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <%  @customer.orders.each do |order| %>
      <tr>
    
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <td><%= link_to 'Show', @order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= button_to "Destroy", @order, method: :delete, data: { turbo_confirm: "Are you sure?"} %></td>
          <td><%= link_to "Back to customers", customers_path %></td>


      </tr>
    <% end %>
  </tbody>
</table>



 
