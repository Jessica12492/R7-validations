<h1>Orders#index</h1>
<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders">
<div id="order_1">


<table>
  <thead>
  <tr>
    <th>product name</th>
    <th>product count</th>
    <th>customer id</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  



  <tbody>
    <% @orders.each do |order| %>
     <%= render order %>
      <tr>
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <td><%= order.customer_id%></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= button_to "Destroy", order, method: :delete, data: { turbo_confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

